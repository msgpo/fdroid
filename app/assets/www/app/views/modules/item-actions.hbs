<div rel="{{cid}}" class="item-actions">
	<a href="#actions">{{icon 'menu'}}</a>
	<div class="menu">
		{{#each actions}}
			<div class="row">
				<ul>
					{{#each this}}
						<li {{#if class}}class="{{class}}"{{/if}}>
							<a href="{{#if href}}{{href}}{{else}}#{{sluggify name}}{{/if}}" rel="{{#if action}}{{action}}{{else}}{{sluggify name}}{{/if}}">
								{{name}}
							</a>
						</li>
					{{/each}}
				</ul>
			</div>
		{{/each}}
	</div>
</div>

