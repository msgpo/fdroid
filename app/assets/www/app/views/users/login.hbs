<input type="text" name="username" placeholder="Username" tabindex="1" autocorrect="off" autocapitalize="none">
<input type="password" name="password" placeholder="Passphrase" tabindex="2">

<div class="buttons">
	<div class="button login">
		<input type="submit" class="button" value="Login">
	</div>
	<p class="load">
		{{svg 'loading'}}
	</p>
	<p>
		<a href="/users/welcome">Create an account</a>
	</p>
</div>

<a class="open-settings" href="#settings">Advanced settings {{icon 'more'}}</a>
<p class="settings">
	<label for="inp_server">
		Turtl server
		<input type="text" name="server" value="{{server}}" placeholder="https://api.turtl.it/api">
	</label>
</p>

