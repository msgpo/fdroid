{{#if show_autologin}}
	<div class="autologin">
		<label>
			<input type="checkbox" name="autologin" value="1" {{#if autologin}}checked{{/if}}>
			Stay logged in
		</label>
	</div>
{{/if}}

<div class="buttons">
	<div class="button join">
		<input type="submit" class="button" value="Join">
	</div>
	<p class="load">
		{{svg 'loading'}}
	</p>
	<p>
		<a href="/users/login">Login to an existing account</a>
	</p>
</div>

<a class="open-settings" href="#settings">Advanced settings {{icon 'more'}}</a>
<p class="settings">
	<label for="inp_server">
		Turtl server
		<input type="text" name="server" value="{{server}}" placeholder="https://api.turtl.it/api">
	</label>
</p>

