<input id="inp_email" type="email" name="username" placeholder="{{t 'Email address'}}" tabindex="4" autocomplete="off" autocorrect="off" autocapitalize="none" autocorrect="off">
<input id="inp_pass" type="password" name="password" placeholder="{{t 'Passphrase'}}" autocomplete="off" autocorrect="off" tabindex="5">
<input id="inp_conf" type="password" name="confirm" placeholder="{{t 'Confirm passphrase'}}" autocomplete="off" autocorrect="off" tabindex="6">
<div class="strength {{state.strength_class}}">
	<div class="progress-bar">
		<div class="inner" style="width: {{state.strength_width}}%;">&nbsp;</div>
	</div>
	<p>{{t 'Passphrase strength: '}}<span class="status">{{state.strength_text}}</span></p>
</div>

{{remember-me autologin}}

<div class="buttons">
	<div class="button join">
		<input type="submit" class="button" value="{{t 'Join'}}">
	</div>
	<p class="load">
		{{svg 'loading'}}
	</p>
	<p>
		<a href="/users/login">{{t 'Login to an existing account'}}</a>
	</p>
</div>

<a class="open-settings {{#if state.settings}}active{{/if}}" href="#settings">{{t 'Advanced settings'}} {{icon 'more'}}</a>
<div class="settings-container {{#if state.settings}}active{{/if}}">
	<p class="settings">
		<label>
			{{t 'Turtl server'}}
			<input type="text" name="server" value="{{state.endpoint}}" placeholder="https://api.turtlapp.com/v3">
		</label>
	</p>
</div>

