<input type="text" name="username" placeholder="Username (or email address)" tabindex="4" autocomplete="off" autocorrect="off" autocapitalize="none">
<input type="password" name="password" placeholder="Passphrase" autocomplete="off" tabindex="5">
<input type="password" name="confirm" placeholder="Confirm passphrase" autocomplete="off" tabindex="6">
<div class="strength">
	<div class="progress-bar">
		<div class="inner">&nbsp;</div>
	</div>
	<p>Passphrase strength: <span class="status"></span></p>
</div>

